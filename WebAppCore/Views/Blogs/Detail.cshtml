@model WebAppCore.Models.blogsVM
@{
    ViewData["Title"] = "Detail";
    var blog = Model.Data;
    var RelatedBlog = Model.RelatedBlogs;
}
@section Style{
    <environment names="Development">
        <link href="~/client-side/css/blog.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/client-side/css/blog.min.css" rel="stylesheet" />
    </environment>
}
<section class="blog_post">
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-sm-12">
                <div class="entry-detail">
                    <div class="page-title">
                    </div>
                    <div class="entry-photo">
                        <figure><img src="@blog.Image" alt="@blog.Name"></figure>
                    </div>
                    <div class="entry-meta-data">
                        <div class="blog-top-desc">
                            <div class="blog-date" style="font-size:10px;height: 35px"> @blog.DateCreated.ToString("dd/mm/yyyy") </div>
                            <h1><a style="font-size: 22px">@blog.Name</a></h1>
                        </div>
                    </div>
                    <div class="content-text clearfix">
                        @(Html.Raw(blog.Content))
                    </div>
                    <div class="entry-tags"> <span>Tags:</span> <a >beauty,</a> <a href="#">medicine,</a> <a href="#">health</a> </div>
                </div>
                <!-- Related Posts -->
                <div class="single-box">
                    <div class="best-title text-left">
                        <h2>Related Posts</h2>
                    </div>
                    <div class="slider-items-products">
                        <div id="related-posts" class="product-flexslider hidden-buttons">
                            <div class="slider-items slider-width-col4 fadeInUp">
                                @foreach(var item in @RelatedBlog)
                                {
                                    var url = "/" + item.SeoAlias + "." + item.Id + ".html";
                                    <div class="product-item">
                                        <article class="entry">
                                            <div class="entry-thumb image-hover2"> <a href="@url"> <img src="@item.Image" alt="@item.Name"> </a> </div>
                                            <div class="entry-info">
                                                <h3 class="entry-title"><a href="@url">@item.Name</a></h3>
                                                <div class="entry-meta-data">
                                                    <span class="date">
                                                        <i class="pe-7s-date">&nbsp;</i> @item.DateCreated.ToString("dd/mm/yyyy")
                                                    </span>
                                                </div>
                                            </div>
                                        </article>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
